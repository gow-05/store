<% cache @product do %>
  <h1><%= @product.name %></h1>
<% end %>
<div style="display: flex;">
<%= link_to "Back", products_path, class: "btn btn-secondary" %>
<%= link_to "Edit", edit_product_path(@product), class: "btn btn-primary" %>
<%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger", style: "height: 100%;" %>
</div>